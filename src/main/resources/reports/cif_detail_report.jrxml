<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="CIF_Detail_Report" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
    <parameter name="REPORT_TITLE" class="java.lang.String"/>
    <parameter name="CREATED_DATE" class="java.time.LocalDateTime"/>
    <parameter name="TRANSACTION_SUBREPORT" class="net.sf.jasperreports.engine.JasperReport"/>
    <parameter name="COLLATERAL_SUBREPORT" class="net.sf.jasperreports.engine.JasperReport"/>
    <parameter name="TRANSACTION_LIST" class="java.util.List"/>
    <parameter name="COLLATERAL_LIST" class="java.util.List"/>

    <field name="name" class="java.lang.String"/>
    <field name="nrcNumber" class="java.lang.String"/>
    <field name="dob" class="java.time.LocalDate"/>
    <field name="gender" class="java.lang.String"/>
    <field name="phoneNumber" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="address" class="java.lang.String"/>
    <field name="maritalStatus" class="java.lang.String"/>
    <field name="occupation" class="java.lang.String"/>
    <field name="incomeSource" class="java.lang.String"/>
    <field name="serialNumber" class="java.lang.String"/>
    <field name="createdAt" class="java.time.LocalDateTime"/>
    <field name="branchId" class="java.lang.Long"/>
    <field name="hasCurrentAccount" class="java.lang.Boolean"/>
    <field name="fNrcPhotoUrl" class="java.lang.String"/>
    <field name="bNrcPhotoUrl" class="java.lang.String"/>

    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[$P{REPORT_TITLE}]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="30" width="555" height="20"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Created: " + $P{CREATED_DATE}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="800"> <!-- Increased height to fit all content -->
            <staticText>
                <reportElement x="0" y="0" width="150" height="20"/>
                <text><![CDATA[Name:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="0" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="20" width="150" height="20"/>
                <text><![CDATA[NRC Number:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="20" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{nrcNumber}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="40" width="150" height="20"/>
                <text><![CDATA[Date of Birth:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="40" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{dob}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="60" width="150" height="20"/>
                <text><![CDATA[Gender:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="60" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{gender}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="80" width="150" height="20"/>
                <text><![CDATA[Phone Number:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="80" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{phoneNumber}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="100" width="150" height="20"/>
                <text><![CDATA[Email:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="100" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="120" width="150" height="20"/>
                <text><![CDATA[Address:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="120" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{address}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="140" width="150" height="20"/>
                <text><![CDATA[Marital Status:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="140" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{maritalStatus}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="160" width="150" height="20"/>
                <text><![CDATA[Occupation:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="160" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{occupation}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="180" width="150" height="20"/>
                <text><![CDATA[Income Source:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="180" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{incomeSource}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="200" width="150" height="20"/>
                <text><![CDATA[Serial Number:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="200" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{serialNumber}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="220" width="150" height="20"/>
                <text><![CDATA[Created At:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="220" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{createdAt}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="240" width="150" height="20"/>
                <text><![CDATA[Branch ID:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="240" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{branchId}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="260" width="150" height="20"/>
                <text><![CDATA[Has Current Account:]]></text>
            </staticText>
            <textField>
                <reportElement x="150" y="260" width="405" height="20"/>
                <textFieldExpression><![CDATA[$F{hasCurrentAccount}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="280" width="150" height="20"/>
                <text><![CDATA[Front NRC Photo:]]></text>
            </staticText>
            <image onErrorType="Blank">
                <reportElement x="150" y="280" width="200" height="100"/>
                <imageExpression><![CDATA[$F{fNrcPhotoUrl}]]></imageExpression>
            </image>
            <staticText>
                <reportElement x="0" y="380" width="150" height="20"/>
                <text><![CDATA[Back NRC Photo:]]></text>
            </staticText>
            <image onErrorType="Blank">
                <reportElement x="150" y="380" width="200" height="100"/>
                <imageExpression><![CDATA[$F{bNrcPhotoUrl}]]></imageExpression>
            </image>

            <subreport>
                <reportElement x="0" y="480" width="555" height="200"/> <!-- Increased height -->
                <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($P{TRANSACTION_LIST})]]></dataSourceExpression>
                <subreportExpression><![CDATA[$P{TRANSACTION_SUBREPORT}]]></subreportExpression>
            </subreport>

            <subreport>
                <reportElement x="0" y="680" width="555" height="120"/> <!-- Adjusted position and height -->
                <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($P{COLLATERAL_LIST})]]></dataSourceExpression>
                <subreportExpression><![CDATA[$P{COLLATERAL_SUBREPORT}]]></subreportExpression>
            </subreport>
        </band>
    </detail>
</jasperReport>