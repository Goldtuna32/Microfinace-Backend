<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="Transaction_Pie_Subreport" pageWidth="555" pageHeight="200" columnWidth="555" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
    <field name="transactionType" class="java.lang.String"/>
    <field name="amount" class="java.math.BigDecimal"/>

    <summary>
        <band height="200">
            <pieChart>
                <chart>
                    <reportElement x="0" y="0" width="400" height="200"/> <!-- Increased size for visibility -->
                    <chartTitle/>
                    <chartSubtitle/>
                    <chartLegend position="Right"/>
                </chart>
                <pieDataset>
                    <keyExpression><![CDATA[$F{transactionType}]]></keyExpression>
                    <valueExpression><![CDATA[$F{amount}]]></valueExpression>
                    <labelExpression><![CDATA[$F{transactionType} + " (" + $F{amount} + ")"]]></labelExpression>
                </pieDataset>
                <piePlot>
                    <plot/>
                    <itemLabel/>
                </piePlot>
            </pieChart>
        </band>
    </summary>
</jasperReport>