<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="TransactionReport" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
    <!-- Define fields matching AccountTransactionDTO -->
    <field name="id" class="java.lang.Long"/>
    <field name="transactionType" class="java.lang.String"/>
    <field name="amount" class="java.math.BigDecimal"/>
    <field name="transactionDescription" class="java.lang.String"/>
    <field name="status" class="java.lang.Integer"/>
    <field name="transactionDate" class="java.util.Date"/>
    <field name="currentAccountId" class="java.lang.Long"/>

    <!-- Variables for Credit and Debit -->
    <variable name="creditAmount" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{transactionType}.equals("CREDIT") ? $F{amount} : new java.math.BigDecimal("0")]]></variableExpression>
    </variable>
    <variable name="debitAmount" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{transactionType}.equals("DEBIT") ? $F{amount} : new java.math.BigDecimal("0")]]></variableExpression>
    </variable>

    <!-- Title Section -->
    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[Account Transaction Report]]></text>
            </staticText>
        </band>
    </title>

    <!-- Chart Section (Bar Chart for Credit/Debit) -->
    <summary>
        <band height="300">
            <barChart>
                <chart>
                    <reportElement x="0" y="0" width="555" height="250"/>
                    <chartTitle>
                        <titleExpression><![CDATA["Credit vs Debit Overview"]]></titleExpression>
                    </chartTitle>
                    <chartSubtitle/>
                    <chartLegend/>
                </chart>
                <categoryDataset>
                    <categorySeries>
                        <seriesExpression><![CDATA["Credits"]]></seriesExpression>
                        <categoryExpression><![CDATA["Total"]]></categoryExpression>
                        <valueExpression><![CDATA[$V{creditAmount}]]></valueExpression>
                    </categorySeries>
                    <categorySeries>
                        <seriesExpression><![CDATA["Debits"]]></seriesExpression>
                        <categoryExpression><![CDATA["Total"]]></categoryExpression>
                        <valueExpression><![CDATA[$V{debitAmount}]]></valueExpression>
                    </categorySeries>
                </categoryDataset>
                <barPlot>
                    <plot/>
                    <itemLabel/>
                    <categoryAxisLabelExpression><![CDATA["Transaction Type"]]></categoryAxisLabelExpression>
                    <valueAxisLabelExpression><![CDATA["Amount"]]></valueAxisLabelExpression>
                </barPlot>
            </barChart>
        </band>
    </summary>

    <!-- Detail Section (Transaction Table) -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="60" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="60" y="0" width="80" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA[$F{transactionType}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00;-$#,##0.00">
                <reportElement x="140" y="0" width="100" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA[$F{amount}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="240" y="0" width="100" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA[$F{transactionDescription}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="340" y="0" width="60" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA[$F{status} == 1 ? "SUCCESS" : "FAILED"]]></textFieldExpression>
            </textField>
            <textField pattern="MM/dd/yyyy hh:mm a">
                <reportElement x="400" y="0" width="120" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA[$F{transactionDate}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Column Header -->
    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="60" height="20" backcolor="#D3D3D3" mode="Opaque"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="60" y="0" width="80" height="20" backcolor="#D3D3D3" mode="Opaque"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Type]]></text>
            </staticText>
            <staticText>
                <reportElement x="140" y="0" width="100" height="20" backcolor="#D3D3D3" mode="Opaque"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Amount]]></text>
            </staticText>
            <staticText>
                <reportElement x="240" y="0" width="100" height="20" backcolor="#D3D3D3" mode="Opaque"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Description]]></text>
            </staticText>
            <staticText>
                <reportElement x="340" y="0" width="60" height="20" backcolor="#D3D3D3" mode="Opaque"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Status]]></text>
            </staticText>
            <staticText>
                <reportElement x="400" y="0" width="120" height="20" backcolor="#D3D3D3" mode="Opaque"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Date]]></text>
            </staticText>
        </band>
    </columnHeader>
</jasperReport>